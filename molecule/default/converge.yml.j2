---
- name: Converge
  hosts: all
  become: yes
  tasks:
    - name: "Include ansible-role-zerotier"
      include_role:
        name: "ansible-role-zerotier"
      vars:
        zerotier_networks:
          {{ZEROTIER_QA_NETWORK_KEY}}:
            apikey: {{ZEROTIER_QA_API_KEY}}
            config:
              authorized: True
            hidden: False
